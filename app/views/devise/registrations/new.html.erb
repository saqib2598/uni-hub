<div class="container rounded bg-white mt-5 mb-5">
  <div class="row">
    <div class="col-md-3 border-right">
        <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"></div>
    </div>
    <div class="col-md-6 border-right">
      <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-center">Register Yourself</h4>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row mt-2">
            <div class="col-md-6">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", placeholder: "first name" %>
            </div>

            <div class="col-md-6">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", placeholder: "last name" %>
            </div>
          </div><br />

          <div class="row mt-2">
            <div class="col-md-6">
                <%= f.label :age %><br />
                <%= f.number_field :age, autofocus: true, autocomplete: "age", class: "form-control", placeholder: "age" %>
            </div>

            <div class="col-md-6">
              <%= f.label :city %><br />
              <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "form-control", placeholder: "city" %>
            </div>
          </div><br />

          <div class="row mt-2">
            <div class="col-md-6">
              <%= f.label :phone_number %><br />
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control", placeholder: "phone_number" %>
            </div>

            <div class="col-md-6">
              <%= f.label :email %><br />
              <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
            </div>
          </div><br />

          <div class="row mt-3">
            <div class="col-md-12">
              <%= f.label :interested_program %><br />
              <%= f.text_field :interested_program, autofocus: true, autocomplete: "interested_program", class: "form-control", placeholder: "interested_program" %>
            </div>
          </div><br />

          <div class="row mt-3">
            <div class="col-md-12">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          </div><br />

          <div class="row mt-3">
            <div class="col-md-12">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div><br />

          <div class="actions mt-5 text-center">
            <%= f.submit "Sign Up", class: "btn btn-primary profile-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>